{
  "name": "vscode-remark",
  "displayName": "remark",
  "description": "Lint and format markdown code with remark",
  "version": "1.2.1",
  "publisher": "unifiedjs",
  "license": "MIT",
  "engines": {
    "vscode": "^1.67.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/remarkjs/vscode-remark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkjs/vscode-remark"
  },
  "keywords": [
    "markdown",
    "remark",
    "format",
    "lint",
    "validate"
  ],
  "author": "Denis Malinochkin <dmalinochkin@rambler.ru>",
  "categories": [
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "qna": "https://github.com/orgs/remarkjs/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/unifiedjs"
  },
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "This extension relies on the file system to load remark and plugins."
    },
    "untrustedWorkspaces": {
      "supported": false,
      "description": "This extension loads configuration files and plugins from workspace and executes them."
    }
  },
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": [
          ".remarkrc",
          ".remarkrc.json"
        ],
        "url": "https://json.schemastore.org/remarkrc"
      },
      {
        "fileMatch": "package.json",
        "url": "./package-json-schema.json"
      }
    ],
    "languages": [
      {
        "id": "ignore",
        "filenames": [
          ".remarkignore"
        ]
      },
      {
        "id": "json",
        "filenames": [
          ".remarkrc"
        ]
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "lint-no-html",
        false
      ]
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.0.0",
    "@vscode/test-electron": "^2.0.0",
    "esbuild": "^0.14.0",
    "prettier": "^2.0.0",
    "remark-cli": "^11.0.0",
    "remark-language-server": "^2.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "typescript": "^4.0.0",
    "vsce": "^2.0.0",
    "vscode-languageclient": "^8.0.0",
    "xo": "^0.50.0"
  },
  "scripts": {
    "lint": "xo",
    "build": "esbuild extension=src/extension.js remark-language-server --bundle --platform=node --target=node16 --format=cjs --external:vscode --outdir=out --minify",
    "pretest": "npm run build && npm run lint",
    "test": "node test.mjs",
    "vscode:prepublish": "npm run build"
  }
}
