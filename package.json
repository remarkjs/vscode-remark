{
  "name": "vscode-remark",
  "displayName": "Remark",
  "description": "Lint and format markdown code with Remark",
  "version": "1.2.1",
  "publisher": "unifiedjs",
  "license": "MIT",
  "engines": {
    "vscode": "^1.46.0"
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "lint-no-emphasis-as-heading",
        false
      ],
      [
        "lint-no-html",
        false
      ]
    ]
  },
  "icon": "icon.png",
  "homepage": "https://github.com/remarkjs/vscode-remark/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkjs/vscode-remark"
  },
  "keywords": [
    "markdown",
    "remark",
    "format",
    "beautify",
    "beautifier"
  ],
  "author": "Denis Malinochkin <dmalinochkin@rambler.ru>",
  "categories": [
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": ".remarkrc",
        "url": "https://json.schemastore.org/remarkrc"
      },
      {
        "fileMatch": ".remarkrc.json",
        "url": "https://json.schemastore.org/remarkrc"
      },
      {
        "fileMatch": "package.json",
        "url": "./package-json-schema.json"
      }
    ],
    "languages": [
      {
        "id": "ignore",
        "extensions": [
          ".remarkignore"
        ]
      },
      {
        "id": "json",
        "filenames": [
          ".remarkrc"
        ]
      }
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "devDependencies": {
    "@types/tape": "^4.0.0",
    "@types/vscode": "^1.0.0",
    "@vscode/test-electron": "^2.0.0",
    "esbuild": "^0.14.0",
    "prettier": "^2.0.0",
    "remark-cli": "^10.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "tape": "^5.0.0",
    "typescript": "^4.0.0",
    "vsce": "^2.0.0",
    "vscode-test": "^1.0.0",
    "xo": "^0.47.0"
  },
  "dependencies": {
    "remark-language-server": "^1.0.0",
    "vscode-languageclient": "^7.0.0"
  },
  "scripts": {
    "build:language-server": "esbuild node_modules/remark-language-server/index.js --bundle --platform=node --minify --sourcemap --format=cjs --outfile=out/remark-language-server.js",
    "build:extension": "esbuild src/extension.js --bundle --platform=node --minify --sourcemap --format=cjs --external:vscode --outfile=out/extension.js",
    "lint": "xo",
    "build": "npm run build:language-server && npm run build:extension",
    "pretest": "npm run build && npm run lint",
    "test": "node ./test.js"
  }
}
